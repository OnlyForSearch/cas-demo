			<dropdown name="FontSize" tooltip="字体大小" onclick="" previewfield="">
				<textfield width="30" restrict="\dpxtinmce%" value="12" hiddenvalue="12" editable="true" myevent="setStyle('font-Size',this.hiddenValue)"/>
